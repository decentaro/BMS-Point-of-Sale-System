{
  "ConnectionStrings": {
    "DefaultConnection": "User Id={{DB_USER}};Password={{DB_PASSWORD}};Server={{DB_SERVER}};Port={{DB_PORT}};Database={{DB_NAME}};Pooling=true;SSL Mode=Require;Trust Server Certificate=true;Timeout=30;Command Timeout=60"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AppSettings": {
    "Environment": "Production",
    "MaxRetryAttempts": 3,
    "RequestTimeoutSeconds": 30,
    "EnableDetailedErrors": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "AllowedHosts": "*"
}
