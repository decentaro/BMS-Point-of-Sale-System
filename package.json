{
  "name": "bms-pos-electron",
  "version": "1.0.0",
  "description": "BMS Point of Sale System built with Electron.js",
  "main": "src/electron/main.js",
  "scripts": {
    "dev-vite": "vite",
    "build-react": "vite build",
    "start": "electron . --no-sandbox",
    "dev": "concurrently \"npm run dev-vite\" \"wait-on http://localhost:3001 && electron . --dev --no-sandbox\"",
    "dev-touch": "concurrently \"npm run dev-vite\" \"wait-on http://localhost:3001 && electron . --dev --no-sandbox --display=2\"",
    "kiosk": "npm run build-react && electron . --no-sandbox",
    "display0": "npm run build-react && electron . --no-sandbox --display=0",
    "display1": "npm run build-react && electron . --no-sandbox --display=1",
    "display2": "npm run build-react && electron . --no-sandbox --display=2",
    "build": "npm run build-react && electron-builder",
    "pack": "npm run build-react && electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "electron",
    "sqlite"
  ],
  "author": "Marc",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.3.0",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/jsbarcode": "^3.11.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsbarcode": "^3.12.1",
    "lucide-react": "^0.540.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.30.1",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  }
}
